{
  "name": "@a11ypros/a11y-ui-components",
  "version": "1.0.5",
  "description": "An accessibility-first React UI component library built with WCAG 2.1/2.2 compliance",
  "keywords": [
    "react",
    "accessibility",
    "a11y",
    "wcag",
    "design-system",
    "components",
    "typescript"
  ],
  "author": "Ryan Mack <ryan@a11ypros.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/global.css"
    },
    "./styles/components": {
      "import": "./dist/styles/components.css"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryan0122/a11ypros-components.git",
    "directory": "packages/design-system"
  },
  "scripts": {
    "build": "tsc && node scripts/copy-css.js",
    "prepublishOnly": "npm run build",
    "storybook": "cd ../.. && npm run storybook",
    "build-storybook": "cd ../.. && npm run build-storybook",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
